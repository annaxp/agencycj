//- require mixins block
include ~@components/mainPage/main
include ~@components/main-title-bg
include ~@components/main-title
include ~@components/mainPage/contacts-list

-
	var data = htmlWebpackPlugin.options.data
	var contactsBlockInfo = data.pages.index.blocks.contacts
	var sectionTitle = contactsBlockInfo.title_img
	var sectionTitleMobile = contactsBlockInfo.title

	var contactsInfo = data.contacts
	var adress = [contactsInfo.adress_link, contactsInfo.adress]
	var phone = [contactsInfo.phone_link, contactsInfo.phone]
	var email = contactsInfo.email
	var socials = contactsInfo.socials

+main({dataHash:'contacts'})
	.contacts-block
		.contacts-block__top.header-offset
			.contacts-block__wrapper.container 
				+main-title-bg(sectionTitle)
				+main-title(sectionTitleMobile)
				.contacts-block__content
					+contacts-list({phone, email, socials})
					.contacts-adress
						a.contacts-adress__link(href=adress[0])= adress[1]
		.contacts-block__bottom
			.contacts-form-wrapper.container
				include ~@components/form
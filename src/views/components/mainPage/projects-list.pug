mixin projects-list(projects)
	.projects-list-wrapper
		.projects-list
			each project in projects
				- var id = project.id
				- var name = project.name
				- var desc = project.preview_text
				- var bgStyles = 'background-color: '+project.background_color
				- var img = project.preview_picture
				- var href = '/projects/'+project.code+'.html'

				.project-slide(style=bgStyles) 
					a.project-item(href=href)
						.project-item__img 
							img(src=img)
							.project-item__img-hover
						.project-item__content
							.project-item__desc= desc
							.project-item__title= name 
		.container 
			include ~@components/mainPage/slider-controls
		.projects-list-wrapper__preloader
			+call-button({tag: 'div', text: 'Еще'} )
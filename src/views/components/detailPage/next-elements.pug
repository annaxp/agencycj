mixin next-elements(props)
  .container 
    .next-project 
      .next-project__prev 
        if props.prev 
          a.next-project__link(href=props.prev.link)
            .next-project__arrow 
              include ~@assets/icons/detail/detail-next-icon.svg
            .next-project__desc= props.prevText
            .next-project__name= props.prev.name
      .next-project__next 
        if props.next 
          a.next-project__link(href=props.next.link)
            .next-project__arrow 
              include ~@assets/icons/detail/detail-next-icon.svg
            .next-project__desc= props.nextText
            .next-project__name= props.next.name
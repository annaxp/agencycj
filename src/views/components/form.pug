- var langFile = htmlWebpackPlugin.options.data.other.index

.form-container(data-success-desc= langFile["success_desc"], data-success= langFile["success"])
	form.form-wrapper(action='/mail.php')
		.form
			label(class=['form-input', 'empty'])
				input.form-input__input(placeholder=langFile["input_name"], name="name", autocomplete="off", class=[])
			label(class=['form-input', 'empty'])
				input.form-input__input(placeholder=langFile["input_phone"], name="phone", autocomplete="off")
		.form__button
			include ../components/call-button
			+call-button({tag:'button', text: langFile["send"], buttonClass: ['call-button--filled']})
			.form-error= langFile["form_error"]

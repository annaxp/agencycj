extends ~@components/page

//- require mixins block
include ~@components/header
include ~@blocks/detailPage/project-detail
include ~@blocks/detailPage/project-content

block variables
	-	
		var webpackData = htmlWebpackPlugin.options.dataId
		var infoblock = require(`@data/infoblocks/services/${webpackData}`)
		var title = infoblock.title
		var description = infoblock.description
		var keywords = infoblock.keywords

block content
	- 
		var indexPage = require('@data/pages/services')
		var nav = indexPage.top_menu
		var langFile = require('@data/other/index')

	body.body
		+header({nav, button: langFile['Связаться с нами'], theme: ['header-wrapper--detail'], buttonClass:['button-light']})
		//- +project-detail(infoblock)
		//- +project-content(content)
		include ~@blocks/detailPage/project-form


extends ~@components/head

//- require mixins block
include ~@components/header

block variables
	-	
		var indexPage = require('@data/pages/index')
		var title = indexPage.title
		var description = indexPage.description
	
block content
	- 
		var nav = indexPage.top_menu
		var langFile = require('@data/other/index')

	body.body
		+header({logo:'#', nav, button: langFile['Связаться с нами']})
		.screens
			.screens-wrapper
				include ~@blocks/mainPage/preview
				include ~@blocks/mainPage/about
				include ~@blocks/mainPage/services
				include ~@blocks/mainPage/projects
				include ~@blocks/mainPage/process
				include ~@blocks/mainPage/team
				include ~@blocks/mainPage/contacts